		 <div class="panel" style="border:1px solid #ddd" >
		 <div class="panel-body">
		 <div class="row">
		<div class="col-sm-1"></div>
		<div class="col-sm-9">
		<h2 style="font-size: large; font-weight: normal; font-family: Helvetica neue,Helvetica,Arial,Sans-serif; text-transform: none " >My Collection</h2><br>
				</div></div>
		<div>
		<div ng-if="totalBought != 0">
		    <div class="panel" ng-repeat="item in productsBought track by $index" >
			<div class="panel-body" >
			<div class="row">
			<div class="col-sm-3">
			<div class="panel " >
			<div class="panel-body" >
			<a href="#" >
						     <img src="/img/{{item.brand_id}}.jpg" class="cartImage" alt="{{item.description}}">
						</a>
				</div>
			</div></div>	
			<div class="col-sm-9">
				<div class="row">
					<div class="col-sm-6">
						<a href='#' ng-click='displayProduct(item.prod_id)'><label> <font style="font-weight: bold; font-size: medium;">{{item.brand}}: {{item.label}}</font></label></a>
